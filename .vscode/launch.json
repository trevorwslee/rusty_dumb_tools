  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Windows) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/target/debug/rusty_dumb_tools.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "environment": [],
      "externalConsole": false
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'rusty_dumb_tools'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=rusty_dumb_tools"
        ],
        "filter": {
          "name": "rusty_dumb_tools",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'rusty_dumb_tools'",
      "cargo": {
        "args": [
          "build",
          "--bin=rusty_dumb_tools",
          "--package=rusty_dumb_tools"
        ],
        "filter": {
          "name": "rusty_dumb_tools",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
